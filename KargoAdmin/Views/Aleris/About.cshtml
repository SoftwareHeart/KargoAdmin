                    <p>ISO 9001:2015 Kalite Yönetim Sistemi müşteri beklentileri, ihtiyaçları ve mevzuat gerekliliklerini karşılar ki, baştan, müşteri memnuniyetinin artırımıması önceliği sürayan hizmet görmüş biz kalite yönetimi sistemi düşündü.</p>
                    <a href="#" class="certification-btn">Belgeyi Görüntüle</a>
                </div>
            </div>

            <div class="certification-card">
                <div class="certification-logo">
                    <img src="~/img/iso9001-logo.png" alt="ISO 9001" />
                </div>
                <div class="certification-info">
                    <h3>ISO 9001</h3>
                    <p>ISO 9001:2015 Kalite Yönetim Sistemi müşteri beklentileri, ihtiyaçları ve mevzuat gerekliliklerini karşılar ki, baştan, müşteri memnuniyetinin artırımıması önceliği sürayan hizmet görmüş biz kalite yönetimi sistemi düşündü.</p>
                    <a href="#" class="certification-btn">Belgeyi Görüntüle</a>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Newsletter Section -->
<section class="newsletter-section">
    <div class="newsletter-content">
        <span class="newsletter-label">ABONE OL</span>
        <h2>Gelişmelerden Haberdar Olun!</h2>
        <p>E-bülten üyeliğimize Abone Olarak PTG LOJİSTİK Haberlerini Tüm Gelişmelerden Haberdar Olun.</p>

        <form class="newsletter-form" onsubmit="return subscribeNewsletter(event)">
            <input type="email" class="newsletter-input" placeholder="E-posta adresinizi girin" required>
            <button type="submit" class="newsletter-btn">Abone Ol</button>
        </form>
    </div>
</section>

@section Scripts {
    <script>
        function subscribeNewsletter(event) {
            event.preventDefault();
            const email = event.target.querySelector('input[type="email"]').value;

            // Burada e-posta abone etme işlemi yapılabilir
            alert('E-bülten aboneliğiniz başarıyla tamamlandı! Teşekkürler.');
            event.target.reset();

            return false;
        }

        // Smooth scroll for internal links
        document.querySelectorAll('a[href^="#"]').forEach(anchor => {
            anchor.addEventListener('click', function (e) {
                e.preventDefault();
                document.querySelector(this.getAttribute('href')).scrollIntoView({
                    behavior: 'smooth'
                });
            });
        });

        // Animation on scroll
        const observerOptions = {
            threshold: 0.1,
            rootMargin: '0px 0px -50px 0px'
        };

        const observer = new IntersectionObserver((entries) => {
            entries.forEach(entry => {
                if (entry.isIntersecting) {
                    entry.target.style.opacity = '1';
                    entry.target.style.transform = 'translateY(0)';
                }
            });
        }, observerOptions);

        // Observe elements for animation
        document.querySelectorAll('.policy-card, .certification-card').forEach(el => {
            el.style.opacity = '0';
            el.style.transform = 'translateY(30px)';
            el.style.transition = 'opacity 0.6s ease, transform 0.6s ease';
            observer.observe(el);
        });
    </script>
}