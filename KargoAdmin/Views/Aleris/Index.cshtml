<!-- Hero Section -->
<section class="hero-section">
    <!-- Video Background Container -->
    <div class="hero-animation-container">
        <!-- Ana video - loop yok, bir kez oynayacak -->
        <video id="heroVideo1" autoplay muted playsinline class="hero-background-video hero-video-1">
            <source src="~/videos/BannerVideo.mp4" type="video/mp4">
        </video>
        <!-- Fallback image - sadece video yüklenemezse göster -->
        <img src="~/img/hero-fallback.jpg" alt="Aleris Global Lojistik" class="hero-fallback-image" style="display: none;">
    </div>

    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8 hero-content">
                <h1 class="hero-title">
                    @LanguageService.GetLocalizedText("Geleceğe umut taşımaktır,", "Carrying hope to the future,")
                    <span>@LanguageService.GetLocalizedText("en büyük hayalimiz!", "is our greatest dream!")</span>
                </h1>
                <p class="hero-text">
                    Lorem ipsum dolor sit amet, consectetur adipiscing elit, sed diam nonummy nibh
                    euismod tincidunt ut laoreet dolore magna aliquam erat volutpat. Ut wisi enim
                </p>
            </div>
        </div>
    </div>

    <!-- Hero Banner Scroll Icon - Alt ortada -->
    <div class="hero-banner-scroll" onclick="scrollToNext()">
        <img src="~/img/BannerScrollIcon.png" alt="Scroll Down" />
    </div>

    <!-- LinkedIn Icon - Sağ alt köşede -->
    <div class="linkedin-floating" onclick="openLinkedIn()">
        <img src="~/img/LinkedinIcon.png" alt="LinkedIn" />
    </div>
</section>

<!-- Animation Section - Yeni eklenen bölüm -->
<section class="animation-section" id="animation-section">
    <!-- Network Video Background -->
    <div class="network-video-container">
        <video class="network-video" autoplay muted loop playsinline>
            <source src="~/videos/PoligonelBg.mp4" type="video/mp4">
        </video>
    </div>

    <div class="animation-container">
        <!-- Sol taraf - Text ve Service Cards -->
        <div class="animation-left">
            <!-- Üst oval çizgi -->
            <div class="top-oval-line"></div>

            <h2 class="animation-title">
                Arelis Global:<br>
                @LanguageService.GetLocalizedText("Sektöre Yeni Bir Soluk.", "A New Breath to the Industry.")
            </h2>

            <!-- Service Mini Cards -->
            <div class="service-cards-container">
                <div class="service-mini-card">
                    <div class="service-mini-icon">
                        <img src="~/img/UluslarArasıTasimacilikIcon.png" alt="@LanguageService.GetLocalizedText("Uluslararası Taşımacılık", "International Transport")" class="service-icon-img">
                    </div>
                    <h4 class="service-mini-title">@LanguageService.GetLocalizedText("Uluslararası", "International")<br>@LanguageService.GetLocalizedText("Taşımacılık", "Transport")</h4>
                </div>
