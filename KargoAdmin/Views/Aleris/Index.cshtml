        <img src="~/img/LinkedinIcon.png" alt="LinkedIn" />
    </div>
</section>

<script>
    (function () {
        var videoA = document.getElementById('heroVideo1');
        var videoB = document.getElementById('heroVideo2');
        if (!videoA || !videoB) return;

        var crossfadeMs = 400; // geçiş süresi
        var switchTimer = null;
        var active = videoA;
        var idle = videoB;

        // Güvenlik: mobilde inline ve sessiz başlat
        [videoA, videoB].forEach(function (v) {
            try {
                v.muted = true;
                v.playsInline = true;
            } catch (e) { }
        });

        function scheduleNextSwitch() {
            var duration = (active && !isNaN(active.duration)) ? active.duration * 1000 : 4000;
            var wait = Math.max(500, duration - crossfadeMs);
            clearTimeout(switchTimer);
            switchTimer = setTimeout(crossfade, wait);
        }

        function crossfade() {
            // Sıradaki videoyu baştan başlat ve oynat
            try { idle.currentTime = 0; } catch (e) { }
            var p = idle.play();
            if (p && typeof p.catch === 'function') {
                p.catch(function () { /* autoplay engeli yok say */ });
            }

            // Görsel geçiş
            idle.classList.add('is-active');
            var prev = active;
            setTimeout(function () {
                prev.classList.remove('is-active');
            }, crossfadeMs);

            // Roller değişsin
            var tmp = active; active = idle; idle = tmp;
            scheduleNextSwitch();
        }

        function startOnceReady() {
            // İlk videoyu görünür yap ve oynat
            active.classList.add('is-active');
            var p = active.play();
            if (p && typeof p.catch === 'function') {
                p.catch(function () { /* autoplay engeli yok say */ });
            }
            scheduleNextSwitch();
        }

        // Her iki videonun da meta verisi yüklendiğinde başlat
        var metaLoaded = 0;
        function onMeta() {
            metaLoaded += 1;
            if (metaLoaded >= 1) { // en az birinin süresi gelsin, yeterli
                startOnceReady();
            }
        }
        videoA.addEventListener('loadedmetadata', onMeta, { once: true });
        videoB.addEventListener('loadedmetadata', onMeta, { once: true });

        // Yedek: metadata gelmezse 1 sn sonra başlat
        setTimeout(function () {
            if (!videoA.classList.contains('is-active')) {
                startOnceReady();
            }
        }, 1000);

        // Sekme görünürlüğü değişince zamanlayıcıyı yönet
        document.addEventListener('visibilitychange', function () {
            if (document.hidden) {
                clearTimeout(switchTimer);
            } else {
                scheduleNextSwitch();
            }
        });
    })();
</script>

