@using KargoAdmin.Services
@inject ILanguageService LanguageService
@inject ISettingsService Settings
@{
    ViewData["Title"] = LanguageService.GetLocalizedText("Kara Yolu Taşımacılığı", "Land Transport");
    Layout = "_PublicLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/service-detail.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="service-hero">
    <img src="~/img/karaTasimaciligi.png" alt="@LanguageService.GetLocalizedText("Kara Yolu Taşımacılığı", "Land Transport")" class="service-hero-image">
    <div class="service-hero-content">
        <h1>@LanguageService.GetLocalizedText("Aleris Lojistik: Kara Yolu Taşımacılığı", "Aleris Logistics: Land Transport")</h1>
        <p class="service-hero-subtitle">
            @LanguageService.GetLocalizedText(
                "Yurtiçi ve uluslararası karayolu taşımacılığı alanında geniş hizmet yelpazemizle, müşterilerimize güvenli, hızlı ve esnek çözümler sunuyoruz.",
                "With a wide range of services in domestic and international road transport, we offer our customers safe, fast and flexible solutions.")
        </p>
    </div>
</section>

<!-- Services Overview -->
<section class="services-overview">
    <div class="services-overview-content">
        <h2>@LanguageService.GetLocalizedText("Hizmetlerimiz", "Our Services")</h2>
        <p class="services-overview-intro">
            @LanguageService.GetLocalizedText(
                "Modern araç filomuz ve deneyimli ekibimizle, her türlü yük taşımacılığında profesyonel hizmet anlayışımızı sürdürüyoruz. Müşteri memnuniyetini ön planda tutarak, güvenilir ve kaliteli hizmet sunuyoruz.",
                "With our modern vehicle fleet and experienced team, we maintain a professional approach in all types of freight transportation. Prioritizing customer satisfaction, we provide reliable and high-quality service.")
        </p>

        <div class="services-grid">
            <!-- Geniş Coğrafi Kapsama Alanı -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-globe-europe"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Geniş Coğrafi Kapsama Alanı", "Wide Geographical Coverage")</h3>
                <p>@LanguageService.GetLocalizedText("Avrupa, Ortadoğu ve Bağımsız Devletler Topluluğu (CIS) ülkelerine komple ve parsiyel taşıma hizmetleri.", "Full and partial transportation services to Europe, the Middle East and CIS countries.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Avrupa genelinde depolama, etiketleme, yeniden paketleme", "Storage, labeling and repacking across Europe")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("CIS ülkelerine komple ve parsiyel taşımalar", "Full and partial shipments to CIS countries")</li>
                </ul>
            </div>

            <!-- Teklikeli Madde ve İşi Kontrollü Taşımacılık -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-exclamation-triangle"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Tehlikeli Madde ve Isı Kontrollü Taşımacılık", "Hazardous and Temperature-Controlled Transport")</h3>
                <p>@LanguageService.GetLocalizedText("ADR (tehlikeli madde) ve frigorifik (sıcaklık kontrollü) taşıma çözümleriyle özel yüklemeler için tam uygundur.", "Suitable for special loads with ADR (hazardous materials) and refrigerated (temperature-controlled) transport solutions.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("ADR sertifikalı sürücüler", "ADR-certified drivers")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Sıcaklık kontrollü taşıma sistemleri", "Temperature-controlled transport systems")</li>
                </ul>
            </div>

            <!-- Hızli Teslimat Seçenekleri -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-shipping-fast"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Hızlı Teslimat Seçenekleri", "Fast Delivery Options")</h3>
                <p>@LanguageService.GetLocalizedText("Minivan araçlarla Avrupa genelinde 48-72 saat içinde ekspres teslimat imkanı.", "Express delivery within 48-72 hours across Europe with minivan vehicles.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("48-72 saat ekspres teslimat", "48-72 hour express delivery")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Avrupa çapında hızlı dağıtım ağı", "Fast distribution network across Europe")</li>
                </ul>
            </div>

            <!-- Avrupada Depolama ve Katma Değerli Hizmetler -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-warehouse"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Avrupa'da Depolama ve Katma Değerli Hizmetler", "Storage and Value-Added Services in Europe")</h3>
                <p>@LanguageService.GetLocalizedText("Avrupa genelinde depolama, etiketleme, yeniden paketleme gibi katma değerli lojistik hizmetleri.", "Value-added logistics services such as storage, labeling and repacking across Europe.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Depolama hizmetleri", "Storage services")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Etiketleme ve yeniden paketleme", "Labeling and repacking")</li>
                </ul>
            </div>

            <!-- Yurt İçi Lojistik Hizmetleri -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-truck-moving"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Yurt İçi Lojistik Hizmetleri", "Domestic Logistics Services")</h3>
                <p>@LanguageService.GetLocalizedText("Türkiye genelinde dağıtım, toplama ve depolama hizmetleriyle entegre çözümler.", "Integrated solutions with distribution, collection and storage services across Turkey.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Türkiye geneli dağıtım ağı", "Nationwide distribution network")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Toplama ve depolama hizmetleri", "Collection and storage services")</li>
                </ul>
            </div>

            <!-- Özel Sertifikalı Taşımalar -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-certificate"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Özel Sertifikalı Taşımalar", "Special Certified Transports")</h3>
                <p>@LanguageService.GetLocalizedText("Özel sertifikasyon gereksinimi olan yüklerin taşınması için profesyonel ve güvenilir çözümler sunuyoruz.", "We provide professional and reliable solutions for transporting loads that require special certification.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Özel sertifikasyon gereksinimleri", "Special certification requirements")</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="why-choose-us">
    <div class="why-choose-content">
        <h2>@LanguageService.GetLocalizedText("Neden Aleris Lojistik?", "Why Aleris Logistics?")</h2>

        <div class="advantages-grid">
            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-dollar-sign"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Uygun Fiyat", "Affordable Prices")</h3>
                <p>@LanguageService.GetLocalizedText("En uygun navlun fiyatlarını en iyi hizmet kalitesiyle sunuyoruz.", "We offer the most affordable freight prices and best service quality.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-shield-alt"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Güvenli Teslimat", "Secure Delivery")</h3>
                <p>@LanguageService.GetLocalizedText("Sıfır hasar politikamız sayesinde yüklerinizi her zaman güvende.", "Your loads are always safe thanks to our zero damage policy.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-clock"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Hızlı Hizmet", "Fast Service")</h3>
                <p>@LanguageService.GetLocalizedText("Tüm hizmetlerimizde maksimum hız ve kalite için çalışıyoruz.", "We strive for maximum speed and quality in all our services.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-route"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Geniş Ağ", "Extensive Network")</h3>
                <p>@LanguageService.GetLocalizedText("Türkiye genelinde ve Avrupa'da geniş bir lojistik ağına sahibiz.", "We have an extensive logistics network in Turkey and across Europe.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-tools"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Özel Çözümler", "Tailored Solutions")</h3>
                <p>@LanguageService.GetLocalizedText("Her müşterimizin ihtiyacına özel lojistik çözümleri geliştiriyoruz.", "We develop tailored logistics solutions for each customer's needs.")</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="service-cta">
    <div class="service-cta-content">
        <h2>@LanguageService.GetLocalizedText("Kara Yolu Taşımacılığı Hizmeti Almak İster Misiniz?", "Interested in Land Transport Services?")</h2>
        <p>@LanguageService.GetLocalizedText("Uzman ekibimizle ihtiyaçlarınıza en uygun lojistik çözümünü bulalım. Size özel fiyat teklifi için hemen iletişime geçin.", "Let our expert team find the most suitable logistics solution for your needs. Contact us now for a tailored quote.")</p>

        <div class="cta-buttons">
            <a href="/Aleris/Iletisim" class="btn-cta-primary">
                <i class="fas fa-envelope"></i>
                @LanguageService.GetLocalizedText("Teklif İste", "Request Quote")
            </a>
            <a href="tel:@(Settings.GetValue("ContactPhone") ?? "+902128431474")" class="btn-cta-secondary">
                <i class="fas fa-phone"></i>
                @LanguageService.GetLocalizedText("Hemen Ara", "Call Now")
            </a>
        </div>
    </div>
</section>