@using KargoAdmin.Services
@inject ILanguageService LanguageService
@inject ISettingsService Settings
@{
    ViewData["Title"] = LanguageService.GetLocalizedText("Deniz Yolu Taşımacılığı", "Sea Transport");
    Layout = "_PublicLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/service-detail.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="service-hero">
    <img src="~/img/denizTasimaciligi.png" alt="@LanguageService.GetLocalizedText("Deniz Yolu Taşımacılığı", "Sea Transport")" class="service-hero-image">
    <div class="service-hero-content">
        <h1>@LanguageService.GetLocalizedText("Aleris Lojistik: Deniz Yolu Taşımacılığı", "Aleris Logistics: Sea Transport")</h1>
        <p class="service-hero-subtitle">
            @LanguageService.GetLocalizedText(
                "Global ölçekte güçlü acente ağımız ve operasyonel uzmanlığımızla, denizyolu taşımacılığında güvenilir ve etkin çözümler sunuyoruz.",
                "With a strong global agency network and operational expertise, we deliver reliable and efficient sea freight solutions.")
        </p>
    </div>
</section>

<!-- Services Overview -->
<section class="services-overview">
    <div class="services-overview-content">
        <h2>@LanguageService.GetLocalizedText("Hizmetlerimiz", "Our Services")</h2>

        <div class="services-grid">
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-network-wired"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Geniş Acente Ağı", "Extensive Agency Network")</h3>
                <p>@LanguageService.GetLocalizedText("170 ülkede, 900 şehirde 6750’yi aşkın acente ile dünya çapında yaygın hizmet ağı.", "A widespread service network with 6,750+ agents across 900 cities in 170 countries.")</p>
            </div>

            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-people-carry"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Liman ve Kapı Teslim Seçenekleri", "Port and Door Delivery Options")</h3>
                <p>@LanguageService.GetLocalizedText("Ülke mevzuatlarına uyumlu liman/kapı teslim taşıma seçenekleri.", "Port-to-port and door-to-door delivery options compliant with local regulations.")</p>
            </div>

            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-box"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("FCL ve LCL Taşıma Seçenekleri", "FCL and LCL Shipping Options")</h3>
                <p>@LanguageService.GetLocalizedText("Tam konteyner (FCL) ve parsiyel (LCL) yüklemelerde esnek taşıma çözümleri.", "Flexible transport solutions for full-container-load (FCL) and less-than-container-load (LCL) shipments.")</p>
            </div>

            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-toolbox"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Özel Ekipman Taşımları", "Special Equipment Shipments")</h3>
                <p>@LanguageService.GetLocalizedText("Flat rack, open top, reefer gibi özel ekipmanlarla standart dışı yükler için çözümler.", "Solutions for non-standard cargo with special equipment such as flat rack, open top and reefer.")</p>
            </div>

            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-random"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Charter ve Multimodal Taşımacılık", "Charter and Multimodal Transport")</h3>
                <p>@LanguageService.GetLocalizedText("Gemi kiralama (charter) ve çok modlu taşımacılık hizmetleriyle esnek lojistik çözümler.", "Flexible logistics through vessel chartering and multimodal transport services.")</p>
            </div>

            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-project-diagram"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Proje, Transit ve Çapraz Ticaret Taşımaları", "Project, Transit and Cross-Trade Shipments")</h3>
                <p>@LanguageService.GetLocalizedText("Büyük ölçekli proje yükleri, transit ve ülkeler arası çapraz ticaret taşımaları.", "Transport for large-scale project cargo, transit shipments and cross-trade between countries.")</p>
            </div>

            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-thermometer-half"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Sıcaklık Kontrollü Taşımacılık", "Temperature-Controlled Transport")</h3>
                <p>@LanguageService.GetLocalizedText("Çabuk bozulabilir gıda, ilaç ve elektronik ürünler için kontrollü sevkiyat.", "Controlled shipping for temperature‑sensitive goods such as perishables, pharmaceuticals and electronics.")</p>
            </div>

            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-warehouse"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Depolama Hizmetleri", "Warehousing Services")</h3>
                <p>@LanguageService.GetLocalizedText("Taşımayı entegre şekilde destekleyen güvenli ve verimli depo çözümleri.", "Secure and efficient warehousing solutions that support transportation end‑to‑end.")</p>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="why-choose-us">
    <div class="why-choose-content">
        <h2>@LanguageService.GetLocalizedText("Deniz Taşımacılığı Avantajlarımız", "Our Sea Freight Advantages")</h2>

        <div class="advantages-grid">
            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-ship"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Güçlü Filo Ağı", "Strong Fleet Network")</h3>
                <p>@LanguageService.GetLocalizedText("Dünyanın en büyük konteyner hatlarıyla yapılan anlaşmalarımızla geniş kapasiteli gemi filosuna erişim.", "Access to a large-capacity vessel fleet through our agreements with the world's largest container lines.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-map-marked-alt"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Global Liman Ağı", "Global Port Network")</h3>
                <p>@LanguageService.GetLocalizedText("500+ liman destinasyonuna düzenli servislerimizle dünyanın her yerine ulaşım imkânı.", "Regular services to 500+ port destinations provide access to anywhere in the world.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Rekabetçi Fiyatlar", "Competitive Prices")</h3>
                <p>@LanguageService.GetLocalizedText("Büyük hacimli anlaşmalarımız sayesinde piyasadaki en uygun navlun fiyatlarını sunuyoruz.", "Thanks to our high-volume agreements, we offer the most competitive ocean freight rates.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Düzenli Seferler", "Regular Schedules")</h3>
                <p>@LanguageService.GetLocalizedText("Ana rotalarda haftalık, diğer destinasyonlarda iki haftalık düzenli seferlerle garantili kapasite.", "Guaranteed capacity with weekly schedules on main routes and bi-weekly services to other destinations.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-file-contract"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Profesyonel Dokümantasyon", "Professional Documentation")</h3>
                <p>@LanguageService.GetLocalizedText("Gümrük, sigorta ve sevkiyat belgelerinin eksiksiz hazırlanması için uzman destek.", "Expert support to prepare customs, insurance and shipping documents completely.")</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="service-cta">
    <div class="service-cta-content">
        <h2>@LanguageService.GetLocalizedText("Deniz Yolu İle Ekonomik Taşımacılık", "Economical Sea Freight")</h2>
        <p>@LanguageService.GetLocalizedText("Büyük hacimli gönderimleriniz için en uygun navlun fiyatlarını alın. Uzman ekibimiz size en iyi rotayı önerecek!", "Get the most competitive ocean freight for your large shipments. Our experts will recommend the best route!")</p>

        <div class="cta-buttons">
            <a href="/Aleris/Iletisim" class="btn-cta-primary">
                <i class="fas fa-calculator"></i>
                @LanguageService.GetLocalizedText("Navlun Hesapla", "Calculate Freight")
            </a>
            <a href="tel:@(Settings.GetValue("ContactPhone") ?? "+902128431474")" class="btn-cta-secondary">
                <i class="fas fa-phone"></i>
                @LanguageService.GetLocalizedText("Uzman Görüşü Al", "Get Expert Advice")
            </a>
        </div>
    </div>
</section>