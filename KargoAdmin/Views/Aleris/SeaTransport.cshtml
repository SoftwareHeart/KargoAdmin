@using KargoAdmin.Services
@inject ILanguageService LanguageService
@{
    ViewData["Title"] = LanguageService.GetLocalizedText("Deniz Yolu Taşımacılığı", "Sea Transport");
    Layout = "_PublicLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/service-detail.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="service-hero">
    <img src="~/img/denizTasimaciligi.png" alt="@LanguageService.GetLocalizedText("Deniz Yolu Taşımacılığı", "Sea Transport")" class="service-hero-image">
    <div class="service-hero-content">
        <h1>@LanguageService.GetLocalizedText("Aleris Lojistik: Deniz Yolu Taşımacılığı", "Aleris Logistics: Sea Transport")</h1>
        <p class="service-hero-subtitle">
            @LanguageService.GetLocalizedText(
                "Global ticaret ağınızı genişletin! Konteyner ve bulk yük taşımacılığı ile dünya limanlarına güvenilir ve ekonomik deniz taşımacılığı çözümleri sunuyoruz.",
                "Expand your global trade network. With container and bulk cargo transportation, we offer reliable and economical sea freight solutions to ports worldwide.")
        </p>
    </div>
</section>

<!-- Services Overview -->
<section class="services-overview">
    <div class="services-overview-content">
        <h2>@LanguageService.GetLocalizedText("Deniz Taşımacılığı Hizmetlerimiz", "Our Sea Freight Services")</h2>
        <p class="services-overview-intro">
            @LanguageService.GetLocalizedText(
                "Dünya denizlerinde faaliyet gösteren önde gelen konteyner hatlarıyla yaptığımız işbirlikleri sayesinde, büyük hacimli yüklerinizi en uygun fiyatlarla güvenle taşıyoruz. Deneyimli operasyon ekibimiz, kapsamlı liman ağımız ve güçlü partner ağımızla hizmetinizdeyiz.",
                "Thanks to our collaborations with leading container lines operating in the world's seas, we safely transport your large-volume cargo at the most competitive prices. Our experienced operations team, comprehensive port network and strong partners are at your service.")
        </p>

        <div class="services-grid">
            <!-- FCL (Full Container Load) -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-shipping-fast"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("FCL (Full Container Load) Taşımacılığı", "FCL (Full Container Load)")</h3>
                <p>@LanguageService.GetLocalizedText("Komple konteyner kiralama ile büyük hacimli yüklerinizi ekonomik şekilde taşıyoruz.", "We economically transport your high-volume cargo with full container rentals.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("20ft ve 40ft konteyner seçenekleri", "20ft and 40ft container options")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("High Cube ve Open Top konteynerler", "High Cube and Open Top containers")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Özel ekipman talepleri", "Special equipment requests")</li>
                </ul>
            </div>

            <!-- LCL (Less Container Load) -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-boxes"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("LCL (Less Container Load) Taşımacılığı", "LCL (Less Container Load)")</h3>
                <p>@LanguageService.GetLocalizedText("Küçük hacimli yüklerinizi diğer gönderilerle konsolide ederek uygun fiyatla gönderiyoruz.", "We consolidate your small-volume cargo with other shipments for a cost-effective solution.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Haftalık konsolide gönderimler", "Weekly consolidated shipments")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Esnek hacim seçenekleri", "Flexible volume options")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Uygun maliyet avantajı", "Cost advantage")</li>
                </ul>
            </div>

            <!-- Bulk Yük Taşımacılığı -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-mountain"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Dökme Yük Taşımacılığı", "Bulk Cargo Transportation")</h3>
                <p>@LanguageService.GetLocalizedText("Tahıl, kömür, cevher gibi dökme yükleriniz için özel bulk carrier gemilerle taşımacılık.", "Transportation of bulk cargo such as grain, coal and ore with dedicated bulk carrier vessels.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Kuru dökme yük taşımacılığı", "Dry bulk cargo transport")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Özel yükleme/boşaltma sistemleri", "Special loading/unloading systems")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Büyük tonajlı gönderimler", "High tonnage shipments")</li>
                </ul>
            </div>

            <!-- RO-RO Taşımacılığı -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-truck-loading"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("RO-RO Taşımacılığı", "RO-RO Transportation")</h3>
                <p>@LanguageService.GetLocalizedText("Araçlar, römorklar ve tekerlekli yükler için özel RO-RO gemileriyle güvenli taşımacılık.", "Safe transportation with dedicated RO-RO vessels for vehicles, trailers and wheeled cargo.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Kamyon ve römork taşımacılığı", "Truck and trailer transport")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Araç ve iş makinesi transportu", "Vehicle and heavy equipment transport")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Hızlı yükleme/boşaltma", "Fast loading/unloading")</li>
                </ul>
            </div>

            <!-- Proje Kargo -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-project-diagram"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Proje Kargo", "Project Cargo")</h3>
                <p>@LanguageService.GetLocalizedText("Ağır, büyük boyutlu ve özel ekipman gerektiren projeler için özelleştirilmiş taşımacılık çözümleri.", "Customized transportation solutions for heavy, oversized and special-equipment projects.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Ağır lift operasyonları", "Heavy lift operations")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Özel boyutlu yüklemeler", "Oversized cargo handling")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Teknik danışmanlık", "Technical consultancy")</li>
                </ul>
            </div>

            <!-- Liman Hizmetleri -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-anchor"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Liman Hizmetleri", "Port Services")</h3>
                <p>@LanguageService.GetLocalizedText("Tüm büyük limanlarda temsilcilik ağımızla gümrük, depolama ve elleçleme hizmetleri.", "Customs, storage and handling services with our representation network in all major ports.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Gümrük işlemleri", "Customs procedures")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Liman depolama", "Port storage")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Yükleme/boşaltma operasyonları", "Loading/unloading operations")</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="why-choose-us">
    <div class="why-choose-content">
        <h2>@LanguageService.GetLocalizedText("Deniz Taşımacılığı Avantajlarımız", "Our Sea Freight Advantages")</h2>

        <div class="advantages-grid">
            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-ship"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Güçlü Filo Ağı", "Strong Fleet Network")</h3>
                <p>@LanguageService.GetLocalizedText("Dünyanın en büyük konteyner hatlarıyla yapılan anlaşmalarımızla geniş kapasiteli gemi filosuna erişim.", "Access to a large-capacity vessel fleet through our agreements with the world's largest container lines.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-map-marked-alt"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Global Liman Ağı", "Global Port Network")</h3>
                <p>@LanguageService.GetLocalizedText("500+ liman destinasyonuna düzenli servislerimizle dünyanın her yerine ulaşım imkânı.", "Regular services to 500+ port destinations provide access to anywhere in the world.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-chart-line"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Rekabetçi Fiyatlar", "Competitive Prices")</h3>
                <p>@LanguageService.GetLocalizedText("Büyük hacimli anlaşmalarımız sayesinde piyasadaki en uygun navlun fiyatlarını sunuyoruz.", "Thanks to our high-volume agreements, we offer the most competitive ocean freight rates.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-calendar-check"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Düzenli Seferler", "Regular Schedules")</h3>
                <p>@LanguageService.GetLocalizedText("Ana rotalarda haftalık, diğer destinasyonlarda iki haftalık düzenli seferlerle garantili kapasite.", "Guaranteed capacity with weekly schedules on main routes and bi-weekly services to other destinations.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-file-contract"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Profesyonel Dokümantasyon", "Professional Documentation")</h3>
                <p>@LanguageService.GetLocalizedText("Gümrük, sigorta ve sevkiyat belgelerinin eksiksiz hazırlanması için uzman destek.", "Expert support to prepare customs, insurance and shipping documents completely.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-satellite-dish"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Gerçek Zamanlı Takip", "Real-Time Tracking")</h3>
                <p>@LanguageService.GetLocalizedText("Konteynırınızın denizde bulunduğu konumunu ve varış tahminini anlık olarak takip edin.", "Track your container's location at sea and ETA in real time.")</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="service-cta">
    <div class="service-cta-content">
        <h2>@LanguageService.GetLocalizedText("Deniz Yolu İle Ekonomik Taşımacılık", "Economical Sea Freight")</h2>
        <p>@LanguageService.GetLocalizedText("Büyük hacimli gönderimleriniz için en uygun navlun fiyatlarını alın. Uzman ekibimiz size en iyi rotayı önerecek!", "Get the most competitive ocean freight for your large shipments. Our experts will recommend the best route!")</p>

        <div class="cta-buttons">
            <a href="/Public/Contact" class="btn-cta-primary">
                <i class="fas fa-calculator"></i>
                @LanguageService.GetLocalizedText("Navlun Hesapla", "Calculate Freight")
            </a>
            <a href="tel:+902123456789" class="btn-cta-secondary">
                <i class="fas fa-phone"></i>
                @LanguageService.GetLocalizedText("Uzman Görüşü Al", "Get Expert Advice")
            </a>
        </div>
    </div>
</section>