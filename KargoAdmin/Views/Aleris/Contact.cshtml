@using KargoAdmin.Services
@inject ILanguageService LanguageService
@{
    ViewData["Title"] = LanguageService.GetLocalizedText("İletişim", "Contact");
    Layout = "~/Views/Shared/_PublicLayout.cshtml";
}

<link href="~/css/contact.css" rel="stylesheet" />

<div class="contact-container">
    <div class="contact-header">
        <p class="contact-breadcrumb">@LanguageService.GetLocalizedText("İletişim Bilgileri", "Contact Information")</p>
        <h1 class="contact-title">@LanguageService.GetLocalizedText("Size yardımcı olmaktan her zaman mutluluk duyarız", "We are always happy to help you")</h1>
    </div>

    <div class="contact-info-section">
        <div class="contact-cards">
            <!-- E-posta Kartı -->
            <div class="contact-card">
                <div class="contact-icon email-icon">
                    <img src="~/img/mail-icon.png" alt="E-posta İkonu" class="contact-icon-img">
                </div>
                <h3 class="contact-card-title">@LanguageService.GetLocalizedText("E-posta", "Email")</h3>
                <p class="contact-card-description">@LanguageService.GetLocalizedText("Lorem ipsum dolor sit amet", "Lorem ipsum dolor sit amet")</p>
                <a href="mailto:help@info.com" class="contact-link">help@info.com</a>
            </div>

            <!-- Telefon Kartı -->
            <div class="contact-card">
                <div class="contact-icon phone-icon">
                    <img src="~/img/phone-icon.png" alt="Telefon İkonu" class="contact-icon-img">
                </div>
                <h3 class="contact-card-title">@LanguageService.GetLocalizedText("Telefon", "Phone")</h3>
                <p class="contact-card-description">@LanguageService.GetLocalizedText("Lorem ipsum dolor sit amet", "Lorem ipsum dolor sit amet")</p>
                <a href="tel:+7-843-672-431" class="contact-link">+7-843-672-431</a>
            </div>

            <!-- Adres Kartı -->
            <div class="contact-card">
                <div class="contact-icon location-icon">
                    <img src="~/img/address-icon.png" alt="Adres İkonu" class="contact-icon-img">
                </div>
                <h3 class="contact-card-title">@LanguageService.GetLocalizedText("Adres", "Address")</h3>
                <p class="contact-card-description">@LanguageService.GetLocalizedText("Lorem ipsum dolor sit amet", "Lorem ipsum dolor sit amet")</p>
                <div class="contact-address">
                    <span class="contact-link">@LanguageService.GetLocalizedText("Sokak / Mahalle / İlçe / İl Açık", "Street / Neighbourhood / District / City")</span><br>
                    <span class="contact-link">@LanguageService.GetLocalizedText("Adres Metni", "Address Text")</span>
                </div>
            </div>
        </div>
    </div>

    <!-- Sosyal Medya İkonları -->
    <div class="social-media-section">
        <div class="social-icons">
            <a href="#" class="social-icon facebook-icon">
                <i class="fab fa-facebook-f"></i>
            </a>
            <a href="#" class="social-icon instagram-icon">
                <i class="fab fa-instagram"></i>
            </a>
            <a href="#" class="social-icon twitter-icon">
                <i class="fab fa-twitter"></i>
            </a>
        </div>
    </div>
</div>