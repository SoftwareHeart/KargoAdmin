@using KargoAdmin.Services
@inject ILanguageService LanguageService
@{
    ViewData["Title"] = LanguageService.GetLocalizedText("Depolama ve Dağıtım", "Storage & Distribution");
    Layout = "_PublicLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/service-detail.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="service-hero">
    <img src="~/img/depolamaDagitim.png" alt="@LanguageService.GetLocalizedText("Depolama ve Dağıtım", "Storage & Distribution")" class="service-hero-image">
    <div class="service-hero-content">
        <h1>@LanguageService.GetLocalizedText("Aleris Lojistik: Depolama ve Dağıtım", "Aleris Logistics: Storage & Distribution")</h1>
        <p class="service-hero-subtitle">
            @LanguageService.GetLocalizedText(
                "Modern depolama tesislerimiz ve gelişmiş dağıtım ağımızla, tedarik zincirinizin her aşamasında güvenilir ve esnek lojistik çözümleri sunuyoruz.",
                "With modern warehousing facilities and an advanced distribution network, we provide reliable and flexible logistics solutions at every stage of your supply chain.")
        </p>
    </div>
    
</section>

<!-- Services Overview -->
<section class="services-overview">
    <div class="services-overview-content">
        <h2>@LanguageService.GetLocalizedText("Depolama ve Dağıtım Hizmetlerimiz", "Our Storage & Distribution Services")</h2>
        <p class="services-overview-intro">
            @LanguageService.GetLocalizedText(
                "Stratejik konumlardaki modern depolama tesislerimizde, mallarınızı güvenli koşullarda saklıyoruz. Gelişmiş envanter yönetim sistemi ve hızlı dağıtım ağımız ile tedarik zincirinizin verimliliğini artırıyoruz.",
                "We store your goods under secure conditions in our modern warehouses located in strategic locations. With our advanced inventory management system and fast distribution network, we increase the efficiency of your supply chain.")
        </p>

        <div class="services-grid">
            <!-- Genel Depolama -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-warehouse"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Genel Depolama Hizmetleri", "General Warehousing Services")</h3>
                <p>@LanguageService.GetLocalizedText("Klimatize edilmiş modern depolarımızda her türlü ürün için güvenli depolama hizmeti.", "Secure storage for all kinds of products in our climate-controlled modern warehouses.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("7/24 güvenlik sistemi", "24/7 security system")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Klima ve nem kontrol", "Climate and humidity control")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Esnek depolama süreleri", "Flexible storage durations")</li>
                </ul>
            </div>

            <!-- Soğuk Zincir Depolama -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-snowflake"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Soğuk Zincir Depolama", "Cold Chain Storage")</h3>
                <p>@LanguageService.GetLocalizedText("Gıda, ilaç ve soğuk zincir gerektiren ürünler için özel sıcaklık kontrollü depolama.", "Temperature-controlled storage for food, pharmaceuticals and other cold chain products.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("-25°C ile +25°C arası kontrol", "Control between -25°C and +25°C")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Sürekli sıcaklık izleme", "Continuous temperature monitoring")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("HACCP sertifikalı tesisler", "HACCP-certified facilities")</li>
                </ul>
            </div>

            <!-- Envanter Yönetimi -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-clipboard-list"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Envanter Yönetimi", "Inventory Management")</h3>
                <p>@LanguageService.GetLocalizedText("WMS (Warehouse Management System) ile gerçek zamanlı stok takibi ve raporlama.", "Real-time stock tracking and reporting with a Warehouse Management System (WMS).")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Barkod sistemi ile takip", "Barcode-based tracking")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Otomatik stok uyarıları", "Automatic stock alerts")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Detaylı raporlama", "Detailed reporting")</li>
                </ul>
            </div>

            <!-- Pick & Pack Hizmetleri -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-box"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Pick & Pack Hizmetleri", "Pick & Pack Services")</h3>
                <p>@LanguageService.GetLocalizedText("Siparişlerinizi hızlı bir şekilde hazırlayıp, profesyonel paketleme ile gönderiye hazırlıyoruz.", "We quickly prepare your orders and get them ready for shipment with professional packing.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Hızlı sipariş hazırlama", "Fast order preparation")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Özel paketleme seçenekleri", "Custom packing options")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Aynı gün kargo", "Same-day shipping")</li>
                </ul>
            </div>

            <!-- Cross-Docking -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-exchange-alt"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Cross-Docking Hizmetleri", "Cross-Docking Services")</h3>
                <p>@LanguageService.GetLocalizedText("Gelen yükleri minimum bekleme süresi ile dağıtım araçlarına aktararak hızlı dağıtım sağlıyoruz.", "We transfer incoming loads to distribution vehicles with minimal waiting time to enable fast distribution.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Hızlı aktarım işlemleri", "Fast transfer operations")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Minimum stok maliyeti", "Minimal inventory cost")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Konsolidasyon hizmetleri", "Consolidation services")</li>
                </ul>
            </div>

            <!-- Last Mile Dağıtım -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-truck-moving"></i>
                </div>
                <h3>Son Nokta Dağıtım</h3>
                <p>Şehir içi ve bölgesel dağıtım ağımızla müşterilerinize hızlı teslimat sağlıyoruz.</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> Şehir içi aynı gün teslimat</li>
                    <li><i class="fas fa-check-circle"></i> Bölgesel dağıtım ağı</li>
                    <li><i class="fas fa-check-circle"></i> Esnek teslimat saatleri</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="why-choose-us">
    <div class="why-choose-content">
        <h2>@LanguageService.GetLocalizedText("Depolama ve Dağıtım Avantajlarımız", "Our Storage & Distribution Advantages")</h2>

        <div class="advantages-grid">
            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-building"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Modern Tesisler", "Modern Facilities")</h3>
                <p>@LanguageService.GetLocalizedText("Son teknoloji ile donatılmış, güvenli ve verimli depolama tesislerimizle hizmet veriyoruz.", "We operate with state-of-the-art, secure and efficient warehousing facilities.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Stratejik Lokasyonlar", "Strategic Locations")</h3>
                <p>@LanguageService.GetLocalizedText("Ulaşım ağlarına yakın konumlardaki depolarımızla hızlı giriş-çıkış imkânı sağlıyoruz.", "Warehouses close to transport networks enable fast inbound and outbound operations.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-laptop"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Teknoloji Entegrasyonu", "Technology Integration")</h3>
                <p>@LanguageService.GetLocalizedText("WMS, ERP entegrasyonu ve online raporlama ile tam şeffaflık sunuyoruz.", "We offer full transparency with WMS, ERP integration and online reporting.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-users-cog"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Uzman Ekip", "Expert Team")</h3>
                <p>@LanguageService.GetLocalizedText("Deneyimli lojistik profesyonellerimizle depolama ve dağıtım operasyonlarını yönetiyoruz.", "Our experienced logistics professionals manage warehousing and distribution operations.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-cogs"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Esnek Çözümler", "Flexible Solutions")</h3>
                <p>@LanguageService.GetLocalizedText("İş ihtiyaçlarınıza uygun özelleştirilmiş depolama ve dağıtım çözümleri geliştiriyoruz.", "We develop customized warehousing and distribution solutions tailored to your business needs.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("KPI Takibi", "KPI Tracking")</h3>
                <p>@LanguageService.GetLocalizedText("Performans göstergelerini sürekli izleyerek hizmet kalitesini artırıyoruz.", "We continuously monitor performance indicators to improve service quality.")</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="service-cta">
    <div class="service-cta-content">
        <h2>@LanguageService.GetLocalizedText("Depolama ve Dağıtım İçin Bize Güvenin", "Trust Us for Storage & Distribution")</h2>
        <p>@LanguageService.GetLocalizedText("Tedarik zincirinizi güçlendirin! Modern depolama tesislerimiz ve hızlı dağıtım ağımızla işinizi büyütün.", "Strengthen your supply chain. Grow your business with our modern warehouses and fast distribution network.")</p>

        <div class="cta-buttons">
            <a href="/Public/Contact" class="btn-cta-primary">
                <i class="fas fa-warehouse"></i>
                @LanguageService.GetLocalizedText("Depo Turu Talep Et", "Request a Warehouse Tour")
            </a>
            <a href="tel:+902123456789" class="btn-cta-secondary">
                <i class="fas fa-phone"></i>
                @LanguageService.GetLocalizedText("Fiyat Bilgisi Al", "Get a Quote")
            </a>
        </div>
    </div>
</section>