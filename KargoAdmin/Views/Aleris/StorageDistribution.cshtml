@using KargoAdmin.Services
@inject ILanguageService LanguageService
@inject ISettingsService Settings
@{
    ViewData["Title"] = LanguageService.GetLocalizedText("Depolama ve Dağıtım", "Storage & Distribution");
    Layout = "_PublicLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/service-detail.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="service-hero">
    <img src="~/img/depolamaDagitim.png" alt="@LanguageService.GetLocalizedText("Depolama ve Dağıtım", "Storage & Distribution")" class="service-hero-image">
    <div class="service-hero-content">
        <h1>@LanguageService.GetLocalizedText("Aleris Lojistik: Depolama ve Dağıtım", "Aleris Logistics: Storage & Distribution")</h1>
        <p class="service-hero-subtitle">
            @LanguageService.GetLocalizedText(
                "Modern depolama tesislerimiz ve gelişmiş dağıtım ağımızla, tedarik zincirinizin her aşamasında güvenilir ve esnek lojistik çözümleri sunuyoruz.",
                "With modern warehousing facilities and an advanced distribution network, we provide reliable and flexible logistics solutions at every stage of your supply chain.")
        </p>
    </div>
    
</section>

<!-- Services Overview -->
<section class="services-overview">
    <div class="services-overview-content">
        <h2>@LanguageService.GetLocalizedText("Hizmetlerimiz", "Our Services")</h2>
        <p class="services-overview-intro">
            @LanguageService.GetLocalizedText(
                "Stratejik konumlardaki modern depolama tesislerimizde, mallarınızı güvenli koşullarda saklıyoruz. Gelişmiş envanter yönetim sistemi ve hızlı dağıtım ağımız ile tedarik zincirinizin verimliliğini arttırıyoruz.",
                "We store your goods under secure conditions in our modern warehouses located in strategic locations. With our advanced inventory management system and fast distribution network, we increase the efficiency of your supply chain.")
        </p>

        <div class="services-grid">
            <!-- Yurtiçi ve Yurtdışı Depolama -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-warehouse"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Yurtiçi ve Yurtdışı Depolama", "Domestic and International Warehousing")</h3>
                <p>@LanguageService.GetLocalizedText("Türkiye ve Avrupa'da konumlanmış depo ağımızla, ürünlerinizi en uygun noktada güvenli saklama imkânı.", "With our warehouse network in Turkey and Europe, store your goods safely at the most suitable locations.")</p>
            </div>

            <!-- Sıcaklık Kontrollü ve Tehlikeli Madde Depolama -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-temperature-low"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Sıcaklık Kontrollü ve Tehlikeli Madde Depolama", "Temperature-Controlled and Hazardous Goods Storage")</h3>
                <p>@LanguageService.GetLocalizedText("Farklı sıcaklık seviyeleri ve tehlikeli ürünler için özel ortamlar; ADR uyumlu güvenli depolama.", "Special environments for different temperature ranges and hazardous goods; ADR-compliant safe storage.")</p>
            </div>

            <!-- Katma Değerli Hizmetler -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-plus-circle"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Katma Değerli Hizmetler", "Value-Added Services")</h3>
                <p>@LanguageService.GetLocalizedText("Etiketleme, yeniden paketleme, montaj, kitting ve kalite kontrol gibi operasyonlarla lojistiğinize değer katıyoruz.", "Labeling, repackaging, assembly, kitting and quality control to add value to your logistics operations.")</p>
            </div>

            <!-- Dağıtım ve Toplama Operasyonları -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-truck"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Dağıtım ve Toplama Operasyonları", "Distribution and Collection Operations")</h3>
                <p>@LanguageService.GetLocalizedText("Randevulu teslimatlar, şehir içi ve şehirler arası dağıtım çözümleri; şube ve depolardan toplama hizmetleri.", "Scheduled deliveries, intra-city and intercity distribution; collection from branches and warehouses.")</p>
            </div>

            <!-- Entegre Lojistik Yönetimi -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-network-wired"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Entegre Lojistik Yönetimi", "Integrated Logistics Management")</h3>
                <p>@LanguageService.GetLocalizedText("Depolama, taşıma ve envanter süreçlerinde entegre şekilde yönetim; teknoloji destekli izlenebilirlik ve maliyet optimizasyonu.", "Integrated management of warehousing, transportation and inventory; tech-enabled traceability and cost optimization.")</p>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="why-choose-us">
    <div class="why-choose-content">
        <h2>@LanguageService.GetLocalizedText("Depolama ve Dağıtım Avantajlarımız", "Our Storage & Distribution Advantages")</h2>

        <div class="advantages-grid">
            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-building"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Modern Tesisler", "Modern Facilities")</h3>
                <p>@LanguageService.GetLocalizedText("Son teknoloji ile donatılmış, güvenli ve verimli depolama tesislerimizle hizmet veriyoruz.", "We operate with state-of-the-art, secure and efficient warehousing facilities.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-map-marker-alt"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Stratejik Lokasyonlar", "Strategic Locations")</h3>
                <p>@LanguageService.GetLocalizedText("Ulaşım ağlarına yakın konumlardaki depolarımızla hızlı giriş-çıkış imkânı sağlıyoruz.", "Warehouses close to transport networks enable fast inbound and outbound operations.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-users-cog"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Uzman Ekip", "Expert Team")</h3>
                <p>@LanguageService.GetLocalizedText("Deneyimli lojistik profesyonellerimizle depolama ve dağıtım operasyonlarını yönetiyoruz.", "Our experienced logistics professionals manage warehousing and distribution operations.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-cogs"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Esnek Çözümler", "Flexible Solutions")</h3>
                <p>@LanguageService.GetLocalizedText("İş ihtiyaçlarınıza uygun özelleştirilmiş depolama ve dağıtım çözümleri geliştiriyoruz.", "We develop customized warehousing and distribution solutions tailored to your business needs.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-chart-bar"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("KPI Takibi", "KPI Tracking")</h3>
                <p>@LanguageService.GetLocalizedText("Performans göstergelerini sürekli izleyerek hizmet kalitesini artırıyoruz.", "We continuously monitor performance indicators to improve service quality.")</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="service-cta">
    <div class="service-cta-content">
        <h2>@LanguageService.GetLocalizedText("Depolama ve Dağıtım İçin Bize Güvenin", "Trust Us for Storage & Distribution")</h2>
        <p>@LanguageService.GetLocalizedText("Tedarik zincirinizi güçlendirin! Modern depolama tesislerimiz ve hızlı dağıtım ağımızla işinizi büyütün.", "Strengthen your supply chain. Grow your business with our modern warehouses and fast distribution network.")</p>

        <div class="cta-buttons">
            <a href="/Aleris/Iletisim" class="btn-cta-primary">
                <i class="fas fa-warehouse"></i>
                @LanguageService.GetLocalizedText("Teklif al", "Request Quote")
            </a>
            <a href="tel:@(Settings.GetValue("ContactPhone") ?? "+902128431474")" class="btn-cta-secondary">
                <i class="fas fa-phone"></i>
                @LanguageService.GetLocalizedText("Fiyat Bilgisi Al", "Get a Quote")
            </a>
        </div>
    </div>
</section>