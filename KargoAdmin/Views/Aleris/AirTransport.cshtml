@using KargoAdmin.Services
@inject ILanguageService LanguageService
@{
    ViewData["Title"] = LanguageService.GetLocalizedText("Hava Yolu Taşımacılığı", "Air Transport");
    Layout = "_PublicLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/service-detail.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="service-hero">
    <img src="~/img/havaTasimaciligi.png" alt="@LanguageService.GetLocalizedText("Hava Yolu Taşımacılığı", "Air Transport")" class="service-hero-image">
    <div class="service-hero-content">
        <h1>@LanguageService.GetLocalizedText("Aleris Lojistik: Hava Yolu Taşımacılığı", "Aleris Logistics: Air Transport")</h1>
        <p class="service-hero-subtitle">
            @LanguageService.GetLocalizedText(
                "Hızlı ve güvenilir hava kargo hizmetleriyle, acil gönderilerinizi dünyanın her yerine zamanında ulaştırıyoruz. Global havayolları ağımızla kesintisiz hizmet sunuyoruz.",
                "With fast and reliable air cargo services, we deliver your urgent shipments worldwide on time. Our global airline network ensures uninterrupted service.")
        </p>
    </div>
    
</section>

<!-- Services Overview -->
<section class="services-overview">
    <div class="services-overview-content">
        <h2>@LanguageService.GetLocalizedText("Hava Kargo Hizmetlerimiz", "Our Air Cargo Services")</h2>
        <p class="services-overview-intro">
            @LanguageService.GetLocalizedText(
                "Dünya çapında güvenilir havayolu şirketleriyle kurduğumuz güçlü işbirlikleri sayesinde, acil ve kritik gönderilerinizi en hızlı şekilde hedefe ulaştırıyoruz. Profesyonel ekibimiz ve gelişmiş teknolojimizle, her adımda yanınızdayız.",
                "Thanks to our strong collaborations with reliable airlines worldwide, we deliver your urgent and critical shipments to their destination as quickly as possible. With our professional team and advanced technology, we are with you every step of the way.")
        </p>

        <div class="services-grid">
            <!-- Express Hava Kargo -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-plane"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Express Hava Kargo", "Express Air Cargo")</h3>
                <p>@LanguageService.GetLocalizedText("Acil gönderileriniz için 24-48 saat içinde dünya geneline teslimat hizmeti.", "Worldwide delivery within 24-48 hours for your urgent shipments.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("24-48 saat express teslimat", "24-48 hour express delivery")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Öncelikli gümrük işlemleri", "Priority customs clearance")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("7/24 takip sistemi", "24/7 tracking system")</li>
                </ul>
            </div>

            <!-- Ekonomik Hava Kargo -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-coins"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Ekonomik Hava Kargo", "Economy Air Cargo")</h3>
                <p>@LanguageService.GetLocalizedText("Uygun fiyatlı hava kargo çözümleriyle, bütçenizi zorlamadan güvenli taşımacılık.", "Cost-effective air cargo solutions for secure transportation without straining your budget.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Rekabetçi fiyatlar", "Competitive prices")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Konsolide gönderimler", "Consolidated shipments")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Esnek teslimat süreleri", "Flexible delivery times")</li>
                </ul>
            </div>

            <!-- Özel Kargo Çözümleri -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-box-open"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Özel Kargo Çözümleri", "Special Cargo Solutions")</h3>
                <p>@LanguageService.GetLocalizedText("Değerli, kırılgan veya özel bakım gerektiren yükleriniz için özel taşıma hizmetleri.", "Special transportation services for valuable, fragile or temperature-sensitive cargo.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Değerli eşya taşımacılığı", "Valuable goods transportation")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Kırılgan malzeme koruması", "Fragile item protection")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Sıcaklık kontrollü taşıma", "Temperature-controlled transport")</li>
                </ul>
            </div>

            <!-- Gümrük ve Dokümantasyon -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-file-alt"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Gümrük ve Dokümantasyon", "Customs and Documentation")</h3>
                <p>@LanguageService.GetLocalizedText("Tüm gümrük işlemlerinizi ve gerekli evrak süreçlerinizi uzman ekibimizle yönetiyoruz.", "We manage all your customs procedures and required documentation with our expert team.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Profesyonel gümrük işlemleri", "Professional customs processes")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Dokümantasyon desteği", "Documentation support")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Vergi ve harç hesaplaması", "Tax and duty calculation")</li>
                </ul>
            </div>

            <!-- Kapıdan Kapıya Hizmet -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-door-open"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Kapıdan Kapıya Hizmet", "Door-to-Door Service")</h3>
                <p>@LanguageService.GetLocalizedText("Gönderinizi sizden alıp, alıcısının kapısına kadar teslim ediyoruz.", "We pick up your shipment from you and deliver it to the recipient's door.")</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Ücretsiz paketleme", "Free packaging")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Adrese teslim", "Home delivery")</li>
                    <li><i class="fas fa-check-circle"></i> @LanguageService.GetLocalizedText("Sigortalı gönderim", "Insured shipment")</li>
                </ul>
            </div>

            <!-- Anlık Takip Sistemi -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-satellite"></i>
                </div>
                <h3>Anlık Takip Sistemi</h3>
                <p>Gönderinizin her anını takip edebilir, gerçek zamanlı bilgi alabilirsiniz.</p>
                <ul class="service-features">
                    <li><i class="fas fa-check-circle"></i> Gerçek zamanlı takip</li>
                    <li><i class="fas fa-check-circle"></i> SMS ve e-posta bildirimleri</li>
                    <li><i class="fas fa-check-circle"></i> Teslimat onayı</li>
                </ul>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="why-choose-us">
    <div class="why-choose-content">
        <h2>@LanguageService.GetLocalizedText("Hava Kargo Avantajlarımız", "Our Air Cargo Advantages")</h2>

        <div class="advantages-grid">
            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-globe"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Global Ağ", "Global Network")</h3>
                <p>@LanguageService.GetLocalizedText("Dünya genelinde 200+ destinasyona direkt uçuş imkânı ile gönderimlerinizi hızla ulaştırıyoruz.", "We deliver quickly with direct flights to 200+ destinations worldwide.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Hızlı Teslimat", "Fast Delivery")</h3>
                <p>@LanguageService.GetLocalizedText("Express servisle 24 saat içinde, standart servisle 3-5 gün içinde teslimat garantisi.", "Delivery guarantee within 24 hours with express service, 3-5 days with standard service.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-shield-halved"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Güvenli Taşımacılık", "Secure Transportation")</h3>
                <p>@LanguageService.GetLocalizedText("Profesyonel paketleme ve sigortalı gönderimlerle %100 güvende kargo taşımacılığı.", "Professional packaging and insured shipments ensure 100% secure cargo handling.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-user-tie"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Uzman Ekip", "Expert Team")</h3>
                <p>@LanguageService.GetLocalizedText("15+ yıl deneyimli uzman ekibimizle, her türlü hava kargo ihtiyacınıza çözüm üretiyoruz.", "With 15+ years of experience, our expert team provides solutions for all your air cargo needs.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-calculator"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Şeffaf Fiyatlandırma", "Transparent Pricing")</h3>
                <p>@LanguageService.GetLocalizedText("Gizli ek ücret yok, tüm masraflarınızı önceden net olarak bildiriyoruz.", "No hidden fees. We provide a clear breakdown of all costs in advance.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-headphones"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("7/24 Müşteri Desteği", "24/7 Customer Support")</h3>
                <p>@LanguageService.GetLocalizedText("Hafta sonları dahil 24 saat müşteri hizmetlerimizden destek alabilirsiniz.", "You can receive support from our customer service 24/7, including weekends.")</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="service-cta">
    <div class="service-cta-content">
        <h2>@LanguageService.GetLocalizedText("Hızlı Hava Kargo Hizmeti İçin Bize Ulaşın", "Contact Us for Fast Air Cargo Service")</h2>
        <p>@LanguageService.GetLocalizedText("Acil gönderimleriniz için profesyonel hava kargo hizmeti alın. Ücretsiz fiyat teklifi için hemen başvurun!", "Get professional air cargo service for your urgent shipments. Apply now for a free quote!")</p>

        <div class="cta-buttons">
            <a href="/Aleris/Iletisim" class="btn-cta-primary">
                <i class="fas fa-paper-plane"></i>
                @LanguageService.GetLocalizedText("Ücretsiz Teklif Al", "Get Free Quote")
            </a>
            <a href="tel:+902123456789" class="btn-cta-secondary">
                <i class="fas fa-phone-alt"></i>
                @LanguageService.GetLocalizedText("Acil Destek Hattı", "Emergency Support Line")
            </a>
        </div>
    </div>
</section>