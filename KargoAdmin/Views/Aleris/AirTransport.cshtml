@using KargoAdmin.Services
@inject ILanguageService LanguageService
@inject ISettingsService Settings
@{
    ViewData["Title"] = LanguageService.GetLocalizedText("Hava Yolu Taşımacılığı", "Air Transport");
    Layout = "_PublicLayout";
}

@section Styles {
    <link rel="stylesheet" href="~/css/service-detail.css" asp-append-version="true" />
}

<!-- Hero Section -->
<section class="service-hero">
    <img src="~/img/havaTasimaciligi.png" alt="@LanguageService.GetLocalizedText("Hava Yolu Taşımacılığı", "Air Transport")" class="service-hero-image">
    <div class="service-hero-content">
        <h1>@LanguageService.GetLocalizedText("Aleris Lojistik: Hava Yolu Taşımacılığı", "Aleris Logistics: Air Transport")</h1>
        <p class="service-hero-subtitle">
            @LanguageService.GetLocalizedText(
                "Hız, güvenlik ve global erişim... Havayolu taşımacılığıyla güçlü acente ağımız ve operasyonel kabiliyetimizle yüklerinizi dünyanın dört bir yanına en hızlı şekilde ulaştırıyoruz.",
                     "Speed, security and global access... We deliver your cargo to every corner of the world in the fastest way possible, thanks to our strong agency network and capacity, combined with the breadth of our airlines.")
        </p>
    </div>
    
</section>

<!-- Services Overview -->
<section class="services-overview">
    <div class="services-overview-content">
        <h2>@LanguageService.GetLocalizedText("Hizmetlerimiz", "Our Services")</h2>
        <p class="services-overview-intro">
            @LanguageService.GetLocalizedText(
                "Dünya çapında güvenilir havayolu şirketleriyle kurduğumuz güçlü işbirlikleri sayesinde, acil ve kritik gönderilerinizi en hızlı şekilde hedefe ulaştırıyoruz. Profesyonel ekibimiz ve gelişmiş teknolojimizle, her adımda yanınızdayız.",
                "Thanks to our strong collaborations with reliable airlines worldwide, we deliver your urgent and critical shipments to their destination as quickly as possible. With our professional team and advanced technology, we are with you every step of the way.")
        </p>

        <div class="services-grid">
            <!-- Küresel Acente Ağı -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-globe"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Küresel Acente Ağı", "Global Agency Network")</h3>
                <p>@LanguageService.GetLocalizedText("190 ülkede, 900 şehirde 6.750'den fazla acente ile global düzeyde etkin hizmet ağı.", "An effective global service network with 6,750+ agents in 190 countries and 900 cities.")</p>
            </div>

            <!-- Liman ve Kapı Teslim Seçenekleri -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-door-open"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Liman ve Kapı Teslim Seçenekleri", "Port and Door Delivery Options")</h3>
                <p>@LanguageService.GetLocalizedText("Tüm dünyada liman ve kapı teslim hizmetleri ile esnek taşıma çözümleri.", "Flexible transport solutions with port-to-port and door-to-door delivery worldwide.")</p>
            </div>

            <!-- Uçuş Avantajları -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-plane-departure"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Uçuş Avantajları", "Flight Advantages")</h3>
                <p>@LanguageService.GetLocalizedText("Geniş taşıyıcı ağı sayesinde uçuşlarda yer ve rekabetçi fiyat avantajı.", "Seat availability and competitive rates thanks to our wide carrier network.")</p>
            </div>

            <!-- Ekspres ve Hızlı Servis -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Ekspres ve Hızlı Servis", "Express and Fast Service")</h3>
                <p>@LanguageService.GetLocalizedText("Acil gönderiler için zaman odaklı ekspres taşıma çözümleri.", "Time-critical express transport solutions for urgent shipments.")</p>
            </div>

            <!-- Konsolidasyon Hizmeti -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-layer-group"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Konsolidasyon Hizmeti", "Consolidation Service")</h3>
                <p>@LanguageService.GetLocalizedText("Birden fazla gönderiyi bir araya getirerek maliyet avantajı ve operasyonel verimlilik.", "Combine multiple shipments to gain cost advantages and operational efficiency.")</p>
            </div>

            <!-- Uçak Kiralama ve Charter Hizmetleri -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-plane"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Uçak Kiralama ve Charter Hizmetleri", "Aircraft Leasing and Charter Services")</h3>
                <p>@LanguageService.GetLocalizedText("Full ve kısmi uçak kiralama operasyonları ile özel taşıma çözümleri.", "Full and partial aircraft charter operations for bespoke transport solutions.")</p>
            </div>

            <!-- Mikro İhracat / İthalat ve Kurye Hizmetleri -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-box"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Mikro İhracat / İthalat ve Kurye Hizmetleri", "Micro Export/Import and Courier Services")</h3>
                <p>@LanguageService.GetLocalizedText("Düşük hacimli gönderiler için pratik, hızlı ve uygun maliyetli lojistik çözümleri.", "Practical, fast and cost-effective logistics solutions for low-volume shipments.")</p>
            </div>

            <!-- Karmaşık Operasyonlarda Uzmanlık -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-diagram-project"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Karmaşık Operasyonlarda Uzmanlık", "Expertise in Complex Operations")</h3>
                <p>@LanguageService.GetLocalizedText("Transit taşımacılık, çapraz ticaret, multimodal taşıma ve proje taşımacılığı süreçlerinde deneyimli ekip ve operasyonel yönetim.", "Experienced team and operational management for transit, cross-trade, multimodal and project cargo operations.")</p>
            </div>

            <!-- Tehlikeli ve Isıya Duyarlı Taşımalar -->
            <div class="service-card">
                <div class="service-card-icon">
                    <i class="fas fa-triangle-exclamation"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Tehlikeli ve Isıya Duyarlı Taşımalar", "Dangerous and Temperature-Sensitive Cargo")</h3>
                <p>@LanguageService.GetLocalizedText("ADR uyumlu, sıcaklık kontrollü taşıma çözümleriyle hassas yükler için tam güvenlik.", "ADR-compliant, temperature-controlled transport solutions for maximum safety of sensitive cargo.")</p>
            </div>
        </div>
    </div>
</section>

<!-- Why Choose Us -->
<section class="why-choose-us">
    <div class="why-choose-content">
        <h2>@LanguageService.GetLocalizedText("Hava Kargo Avantajlarımız", "Our Air Cargo Advantages")</h2>

        <div class="advantages-grid">
            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-globe"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Global Ağ", "Global Network")</h3>
                <p>@LanguageService.GetLocalizedText("Dünya genelinde 200+ destinasyona direkt uçuş imkânı ile gönderimlerinizi hızla ulaştırıyoruz.", "We deliver quickly with direct flights to 200+ destinations worldwide.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-bolt"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Hızlı Teslimat", "Fast Delivery")</h3>
                <p>@LanguageService.GetLocalizedText("Express servisle 24 saat içinde, standart servisle 3-5 gün içinde teslimat garantisi.", "Delivery guarantee within 24 hours with express service, 3-5 days with standard service.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-shield-halved"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Güvenli Taşımacılık", "Secure Transportation")</h3>
                <p>@LanguageService.GetLocalizedText("Profesyonel paketleme ve sigortalı gönderimlerle %100 güvende kargo taşımacılığı.", "Professional packaging and insured shipments ensure 100% secure cargo handling.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-user-tie"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Uzman Ekip", "Expert Team")</h3>
                <p>@LanguageService.GetLocalizedText("15+ yıl deneyimli uzman ekibimizle, her türlü hava kargo ihtiyacınıza çözüm üretiyoruz.", "With 15+ years of experience, our expert team provides solutions for all your air cargo needs.")</p>
            </div>

            <div class="advantage-card">
                <div class="advantage-icon">
                    <i class="fas fa-calculator"></i>
                </div>
                <h3>@LanguageService.GetLocalizedText("Şeffaf Fiyatlandırma", "Transparent Pricing")</h3>
                <p>@LanguageService.GetLocalizedText("Gizli ek ücret yok, tüm masraflarınızı önceden net olarak bildiriyoruz.", "No hidden fees. We provide a clear breakdown of all costs in advance.")</p>
            </div>
        </div>
    </div>
</section>

<!-- CTA Section -->
<section class="service-cta">
    <div class="service-cta-content">
        <h2>@LanguageService.GetLocalizedText("Hızlı Hava Kargo Hizmeti İçin Bize Ulaşın", "Contact Us for Fast Air Cargo Service")</h2>
        <p>@LanguageService.GetLocalizedText("Acil gönderimleriniz için profesyonel hava kargo hizmeti alın. Ücretsiz fiyat teklifi için hemen başvurun!", "Get professional air cargo service for your urgent shipments. Apply now for a free quote!")</p>

        <div class="cta-buttons">
            <a href="/Aleris/Iletisim" class="btn-cta-primary">
                <i class="fas fa-paper-plane"></i>
                @LanguageService.GetLocalizedText("Ücretsiz Teklif Al", "Get Free Quote")
            </a>
            <a href="tel:@(Settings.GetValue("ContactPhone") ?? "+902128431474")" class="btn-cta-secondary">
                <i class="fas fa-phone-alt"></i>
                @LanguageService.GetLocalizedText("Acil Destek Hattı", "Emergency Support Line")
            </a>
        </div>
    </div>
</section>