                                <i class="fas fa-check-circle text-primary me-2"></i>
                                Tehlikeli Madde Taşımacılığı
                            </li>
                            <li>
                                <i class="fas fa-check-circle text-primary me-2"></i>
                                Charter Hizmetleri
                            </li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Depolama -->
<section id="warehouse" class="section">
    <div class="container">
        <div class="row align-items-center">
            <div class="col-lg-6 mb-4 mb-lg-0">
