@section Scripts {
    <script>
        // Video slow-down at end and stop
        document.addEventListener('DOMContentLoaded', function() {
            const video = document.getElementById('heroVideo1');
            const fallbackImage = document.querySelector('.hero-fallback-image');
            let slowdownStarted = false;

            if (video) {
                // Video yüklendiğinde
                video.addEventListener('loadeddata', function() {
                    console.log('Video loaded successfully');
                    fallbackImage.style.display = 'none';
                });

                // Video oynatılamadığında
                video.addEventListener('error', function(e) {
                    console.error('Video error:', e);
                    fallbackImage.style.display = 'block';
                });

                // Video timing kontrolü - son saniyede yavaşlat
                video.addEventListener('timeupdate', function() {
                    const duration = this.duration;
                    const currentTime = this.currentTime;
                    const remaining = duration - currentTime;

                    // Son 1 saniyede yavaşlatmaya başla
                    if (remaining <= 1.0 && remaining > 0 && !slowdownStarted) {
                        slowdownStarted = true;
                        console.log('Starting slowdown effect');

                        // Yavaşça playback rate'i düşür
                        this.playbackRate = 0.8; // %80 hız

                        // setTimeout(() => {
                        //     this.playbackRate = 0.6; // %60 hız
                        // }, 200);

                    }
                });

                // Video bittiğinde - durdurmak için hiçbir şey yapma
                video.addEventListener('ended', function() {
                    console.log('Video ended and stopped');
                    // Video durdu, tekrar başlamayacak
                });

                // Manuel oynatma denemesi
                video.play().catch(function(error) {
                    console.error('Video play failed:', error);
                    fallbackImage.style.display = 'block';
                });
            }
        });

        // İstatistik sayılarını animasyonla göster
        document.addEventListener('DOMContentLoaded', function() {
            const statNumbers = document.querySelectorAll('.stat-number');

            statNumbers.forEach(number => {
                const finalValue = parseInt(number.getAttribute('data-count'));
                let startValue = 0;
                const duration = 2000;
                const increment = finalValue / (duration / 16);

                const counter = setInterval(() => {
                    startValue += increment;
                    if(startValue >= finalValue) {
                        number.textContent = finalValue.toLocaleString();
                        clearInterval(counter);
                    } else {
                        number.textContent = Math.floor(startValue).toLocaleString();
                    }
                }, 16);
            });
        });

        // Scroll to next section
        function scrollToNext() {
            document.getElementById('services-section').scrollIntoView({
                behavior: 'smooth'
            });
        }

        // LinkedIn function
        function openLinkedIn() {
            window.open('https://www.linkedin.com/company/alerisglobal', '_blank');
        }
    </script>
}