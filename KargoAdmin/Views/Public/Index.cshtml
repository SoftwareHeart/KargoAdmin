<!-- Cargo Tracking Section -->
<section class="tracking-section">
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-lg-8">
                <div class="tracking-form">
                    <h3 class="tracking-title text-center mb-4">Kargo Takip</h3>
                    <p class="text-center mb-4">
                        Kargo takip numaranızı girerek gönderinizin durumunu anında öğrenebilirsiniz.
                    </p>
                    <form>
                        <div class="input-group mb-3">
                            <input type="text" class="form-control form-control-lg" placeholder="Kargo Takip Numarası" aria-label="Kargo Takip Numarası">
                            <button class="btn btn-primary" type="button">
                                <i class="fas fa-search me-2"></i> Sorgula
