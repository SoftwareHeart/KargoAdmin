                        </div>
                        <small class="form-text text-muted text-center d-block">
                            * Kargo takip numaranızı faturanızdan veya kargo fişinden öğrenebilirsiniz.
                        </small>
                    </form>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Blog Section -->
<section class="section bg-light">
    <div class="container">
        <h2 class="section-title">Son Blog Yazıları</h2>
        <div class="row">
            @foreach (var blog in ViewBag.RecentBlogs)
            {
                <div class="col-lg-4 col-md-6 mb-4">
                    <div class="blog-card">
                        @if (!string.IsNullOrEmpty(blog.ImageUrl))
                        {
                            <div class="blog-card-img" style="background-image: url('/uploads/@blog.ImageUrl')"></div>
                        }
                        else
                        {
                            <div class="blog-card-img" style="background-image: url('/img/blog-placeholder.jpg')"></div>
                        }
                        <div class="p-4">
                            <p class="blog-card-date">
                                <i class="far fa-calendar-alt me-2"></i> @blog.PublishDate.ToString("dd.MM.yyyy")
                            </p>
                            <h3 class="blog-card-title">@blog.Title</h3>
                            <p class="blog-card-excerpt">
                                @(Html.Raw(blog.Content).ToString().Length > 150
                                    ? Html.Raw(blog.Content).ToString().Substring(0, 150) + "..."
                                    : Html.Raw(blog.Content).ToString())
                            </p>
                            <a href="@Url.Action("Details", "PublicBlog", new { id = blog.Id, slug = blog.Slug })" class="btn btn-sm btn-outline-primary">
                                Devamını Oku <i class="fas fa-arrow-right ms-1"></i>
                            </a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a href="@Url.Action("Index", "PublicBlog")" class="btn btn-primary">Tüm Blog Yazıları</a>
        </div>
    </div>
</section>

