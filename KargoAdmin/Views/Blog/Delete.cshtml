@model Blog

@{
    ViewData["Title"] = "Blog Sil";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Blog Sil</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Blog")">Blog Listesi</a></li>
        <li class="breadcrumb-item active">Blog Sil</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header bg-danger text-white">
            <i class="fas fa-exclamation-triangle me-1"></i>
            Dikkat! Bu işlem geri alınamaz.
        </div>
        <div class="card-body">
            <div class="alert alert-warning">
                <h5><strong>"@Model.Title"</strong> başlıklı blog yazısını silmek istediğinizden emin misiniz?</h5>
                <p>Bu işlem geri alınamaz.</p>
            </div>

            <div class="row mb-4">
                <div class="col-md-8">
                    <h4>@Model.Title</h4>
                    <p class="text-muted">
                        <small>
                            Yazar: @Model.Author.FirstName @Model.Author.LastName |
                            Yayın Tarihi: @Model.PublishDate.ToString("dd.MM.yyyy HH:mm") |
                            Durum: @(Model.IsPublished ? "Yayında" : "Taslak")
                        </small>
                    </p>
                    <div class="mt-3">
                        @Html.Raw(Model.Content.Substring(0, Math.Min(Model.Content.Length, 300)))...
                    </div>
                </div>
                <div class="col-md-4">
                    @if (!string.IsNullOrEmpty(Model.ImageUrl))
                    {
                        <img src="/uploads/@Model.ImageUrl" class="img-fluid rounded" />
                    }
                </div>
            </div>

            <form asp-action="Delete" method="post">
                <input type="hidden" asp-for="Id" />
                <div class="mt-4">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash me-1"></i> Evet, Sil
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-times me-1"></i> İptal
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>