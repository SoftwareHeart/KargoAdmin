@model IEnumerable<Blog>

@{
    ViewData["Title"] = "Blog Yönetimi";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Blog Yönetimi</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item active">Blog Listesi</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <div class="d-flex justify-content-between align-items-center">
                <div>
                    <i class="fas fa-table me-1"></i>
                    Blog Yazıları
                </div>
                <a href="@Url.Action("Create", "Blog")" class="btn btn-primary">
                    <i class="fas fa-plus me-1"></i> Yeni Blog Yazısı
                </a>
            </div>
        </div>
        <div class="card-body">
            <table id="blogsTable" class="table table-striped table-bordered">
                <thead>
                    <tr>
                        <th>Başlık</th>
                        <th>Resim</th>
                        <th>Yayın Tarihi</th>
                        <th>Güncelleme Tarihi</th>
                        <th>Durum</th>
                        <th>İşlemler</th>
                    </tr>
                </thead>
                <tbody>
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@item.Title</td>
                            <td>
                                @if (!string.IsNullOrEmpty(item.ImageUrl))
                                {
                                    <img src="/uploads/@item.ImageUrl" style="height: 50px; width: auto;" />
                                }
                                else
                                {
                                    <span>Resim Yok</span>
                                }
                            </td>
                            <td>@item.PublishDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>@item.UpdateDate.ToString("dd.MM.yyyy HH:mm")</td>
                            <td>
                                @if (item.IsPublished)
                                {
                                    <span class="badge bg-success">Yayında</span>
                                }
                                else
                                {
                                    <span class="badge bg-warning text-dark">Taslak</span>
                                }
                            </td>
                            <td>
                                <div class="btn-group" role="group">
                                    <a href="@Url.Action("Details", "Blog", new { id = item.Id })" class="btn btn-info btn-sm">
                                        <i class="fas fa-eye"></i>
                                    </a>
                                    <a href="@Url.Action("Edit", "Blog", new { id = item.Id })" class="btn btn-primary btn-sm">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a href="@Url.Action("Delete", "Blog", new { id = item.Id })" class="btn btn-danger btn-sm">
                                        <i class="fas fa-trash"></i>
                                    </a>
                                </div>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#blogsTable').DataTable({
                responsive: true,
                language: {
                    "url": "//cdn.datatables.net/plug-ins/1.10.25/i18n/Turkish.json"
                }
            });
        });
    </script>
}