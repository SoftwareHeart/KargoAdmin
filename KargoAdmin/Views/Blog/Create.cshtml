            function validateField(field, value) {
                const formGroup = field.closest('.create-form-group');
                const fieldName = field.getAttribute('name') || field.id;
                let isValid = true;
                let errorMessage = '';

                // Remove existing validation classes
                field.classList.remove('is-valid', 'is-invalid');
                if (formGroup) {
                    formGroup.classList.remove('has-error', 'has-success');
                }

                // Validation rules
                if (field.hasAttribute('required') && (!value || value.trim() === '')) {
                    isValid = false;
                    errorMessage = 'Bu alan zorunludur.';
                } else if (fieldName === 'Title' && value.length < 10) {
                    isValid = false;
                    errorMessage = 'Başlık en az 10 karakter olmalıdır.';
                } else if (fieldName === 'Title' && value.length > 100) {
                    isValid = false;
                    errorMessage = 'Başlık en fazla 100 karakter olabilir.';
                } else if (fieldName === 'MetaDescription' && value.length > 160) {
                    isValid = false;
                    errorMessage = 'Meta açıklama en fazla 160 karakter olabilir.';
                }

                // Apply validation classes
                if (isValid && value && value.trim() !== '') {
                    field.classList.add('is-valid');
                    if (formGroup) {
                        formGroup.classList.add('has-success');
                    }
                } else if (!isValid) {
                    field.classList.add('is-invalid');
                    if (formGroup) {
                        formGroup.classList.add('has-error');
                    }
                    
                    // Show error message
                    showFieldError(field, errorMessage);
                }

                return isValid;
            }

