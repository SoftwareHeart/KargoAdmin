@model Blog

@{
    ViewData["Title"] = "Blog Detayları";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Blog Detayları</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item"><a href="/Admin">Dashboard</a></li>
        <li class="breadcrumb-item"><a href="@Url.Action("Index", "Blog")">Blog Listesi</a></li>
        <li class="breadcrumb-item active">Blog Detayları</li>
    </ol>

    <div class="card mb-4">
        <div class="card-header">
            <i class="fas fa-info-circle me-1"></i>
            Blog Yazısı Bilgileri
        </div>
        <div class="card-body">
            <div class="row mb-3">
                <div class="col-md-8">
                    <h2>@Model.Title</h2>
                    <div class="mb-3">
                        <span class="badge bg-primary me-2">Yayın Tarihi: @Model.PublishDate.ToString("dd.MM.yyyy HH:mm")</span>
                        <span class="badge bg-secondary me-2">Güncelleme: @Model.UpdateDate.ToString("dd.MM.yyyy HH:mm")</span>
                        @if (Model.IsPublished)
                        {
                            <span class="badge bg-success">Yayında</span>
                        }
                        else
                        {
                            <span class="badge bg-warning text-dark">Taslak</span>
                        }
                    </div>
                    <p class="text-muted">
                        <strong>Yazar:</strong> @Model.Author.FirstName @Model.Author.LastName
                    </p>
                </div>
                <div class="col-md-4 text-end">
                    <div class="btn-group" role="group">
                        <a href="@Url.Action("Edit", "Blog", new { id = Model.Id })" class="btn btn-primary">
                            <i class="fas fa-edit me-1"></i> Düzenle
                        </a>
                        <a href="@Url.Action("Delete", "Blog", new { id = Model.Id })" class="btn btn-danger">
                            <i class="fas fa-trash me-1"></i> Sil
                        </a>
                    </div>
                </div>
            </div>

            @if (!string.IsNullOrEmpty(Model.ImageUrl))
            {
                <div class="text-center mb-4">
                    <img src="/uploads/@Model.ImageUrl" class="img-fluid rounded" style="max-height: 400px;" alt="@Model.Title" />
                </div>
            }

            <div class="card mb-4">
                <div class="card-header">
                    <h5 class="mb-0">İçerik</h5>
                </div>
                <div class="card-body">
                    @Html.Raw(Model.Content)
                </div>
            </div>

            <div class="card">
                <div class="card-header">
                    <h5 class="mb-0">Meta Bilgiler</h5>
                </div>
                <div class="card-body">
                    <table class="table table-bordered">
                        <tbody>
                            <tr>
                                <th style="width: 200px;">ID</th>
                                <td>@Model.Id</td>
                            </tr>
                            <tr>
                                <th>Yayın Durumu</th>
                                <td>
                                    @if (Model.IsPublished)
                                    {
                                        <span class="text-success"><i class="fas fa-check-circle me-1"></i> Yayında</span>
                                    }
                                    else
                                    {
                                        <span class="text-warning"><i class="fas fa-exclamation-circle me-1"></i> Taslak</span>
                                    }
                                </td>
                            </tr>
                            <tr>
                                <th>Yayın Tarihi</th>
                                <td>@Model.PublishDate.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            </tr>
                            <tr>
                                <th>Son Güncelleme</th>
                                <td>@Model.UpdateDate.ToString("dd.MM.yyyy HH:mm:ss")</td>
                            </tr>
                            <tr>
                                <th>Yazar</th>
                                <td>@Model.Author.FirstName @Model.Author.LastName (@Model.Author.Email)</td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>

            <div class="mt-4">
                <a asp-action="Index" class="btn btn-secondary">
                    <i class="fas fa-arrow-left me-1"></i> Listeye Dön
                </a>
            </div>
        </div>
    </div>
</div>