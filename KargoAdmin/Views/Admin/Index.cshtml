@{
    ViewData["Title"] = "Admin Dashboard";
    Layout = "_AdminLayout";
}

<div class="container-fluid px-4">
    <h1 class="mt-4">Dashboard</h1>
    <ol class="breadcrumb mb-4">
        <li class="breadcrumb-item active">Dashboard</li>
    </ol>
    <div class="row">
        <div class="col-xl-3 col-md-6">
            <div class="card bg-primary text-white mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>Blog Yazıları</div>
                        <div class="h2 mb-0">@ViewBag.BlogCount</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/admin/blog">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-success text-white mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>Yayında Olan Yazılar</div>
                        <div class="h2 mb-0">@ViewBag.PublishedBlogCount</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/admin/blog">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-warning text-white mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>Taslak Yazılar</div>
                        <div class="h2 mb-0">@ViewBag.DraftBlogCount</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/admin/blog">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>

        <div class="col-xl-3 col-md-6">
            <div class="card bg-info text-white mb-4">
                <div class="card-body">
                    <div class="d-flex align-items-center justify-content-between">
                        <div>Son 7 Günde Yazılan</div>
                        <div class="h2 mb-0">@ViewBag.LastWeekBlogCount</div>
                    </div>
                </div>
                <div class="card-footer d-flex align-items-center justify-content-between">
                    <a class="small text-white stretched-link" href="/admin/blog">Detayları Görüntüle</a>
                    <div class="small text-white"><i class="fas fa-angle-right"></i></div>
                </div>
            </div>
        </div>
    </div>

    <div class="row">
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header d-flex justify-content-between align-items-center">
                    <div>
                        <i class="fas fa-blog me-1"></i>
                        Son Blog Yazıları
                    </div>
                    <a href="@Url.Action("Index", "Blog")" class="btn btn-primary btn-sm">
                        <i class="fas fa-list me-1"></i> Tümünü Gör
                    </a>
                </div>
                <div class="card-body">
                    @if (ViewBag.RecentBlogs != null && ((IEnumerable<dynamic>)ViewBag.RecentBlogs).Any())
                    {
                        <div class="table-responsive">
                            <table class="table table-hover" id="recentBlogsTable">
                                <thead class="table-light">
                                    <tr>
                                        <th width="40%">Başlık</th>
                                        <th width="20%">Tarih</th>
                                        <th width="20%">Durum</th>
                                        <th width="20%">İşlemler</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    @foreach (var blog in ViewBag.RecentBlogs)
                                    {
                                        <tr data-blog-id="@blog.Id">
                                            <td>
                                                <div class="fw-bold text-truncate" style="max-width: 200px;" title="@blog.Title">
                                                    @blog.Title
                                                </div>
                                                <small class="text-muted">ID: @blog.Id</small>
                                            </td>
                                            <td>
                                                <small>
                                                    @blog.PublishDate.ToString("dd.MM.yyyy")<br>
                                                    <span class="text-muted">@blog.PublishDate.ToString("HH:mm")</span>
                                                </small>
                                            </td>
                                            <td>
                                                @if (blog.IsPublished)
                                                {
                                                    <span class="badge bg-success">
                                                        <i class="fas fa-check-circle me-1"></i>Yayında
                                                    </span>
                                                }
                                                else
                                                {
                                                    <span class="badge bg-warning text-dark">
                                                        <i class="fas fa-clock me-1"></i>Taslak
                                                    </span>
                                                }
                                            </td>
                                            <td>
                                                <div class="btn-group btn-group-sm" role="group">
                                                    <a href="@Url.Action("Details", "Blog", new { id = blog.Id })" 
                                                       class="btn btn-outline-info" 
                                                       title="Görüntüle"
                                                       data-blog-action="details"
                                                       data-blog-id="@blog.Id">
                                                        <i class="fas fa-eye"></i>
                                                    </a>
                                                    <a href="@Url.Action("Edit", "Blog", new { id = blog.Id })" 
                                                       class="btn btn-outline-primary" 
                                                       title="Düzenle"
                                                       data-blog-action="edit"
                                                       data-blog-id="@blog.Id">
                                                        <i class="fas fa-edit"></i>
                                                    </a>
                                                    <a href="@Url.Action("Delete", "Blog", new { id = blog.Id })" 
                                                       class="btn btn-outline-danger delete-blog-btn" 
                                                       title="Sil"
                                                       data-blog-action="delete"
                                                       data-blog-id="@blog.Id"
                                                       data-blog-title="@blog.Title">
                                                        <i class="fas fa-trash"></i>
                                                    </a>
                                                </div>
                                            </td>
                                        </tr>
                                    }
                                </tbody>
                            </table>
                        </div>
                    }
                    else
                    {
                        <div class="text-center py-4">
                            <i class="fas fa-blog fa-3x text-muted mb-3"></i>
                            <h5 class="text-muted">Henüz blog yazısı yok</h5>
                            <p class="text-muted">İlk blog yazınızı oluşturmak için butona tıklayın.</p>
                            <a href="@Url.Action("Create", "Blog")" class="btn btn-primary">
                                <i class="fas fa-plus me-1"></i> İlk Blog Yazısını Oluştur
                            </a>
                        </div>
                    }
                </div>
            </div>
        </div>
        <div class="col-xl-6">
            <div class="card mb-4">
                <div class="card-header">
                    <i class="fas fa-user me-1"></i>
                    Admin Bilgileri
                </div>
                <div class="card-body">
                    <div class="mb-3">
                        <strong>Ad Soyad:</strong> @ViewBag.CurrentUser.FirstName @ViewBag.CurrentUser.LastName
                    </div>
                    <div class="mb-3">
                        <strong>E-posta:</strong> @ViewBag.CurrentUser.Email
                    </div>
                    <div class="mb-3">
                        <strong>Son Giriş:</strong> @(ViewBag.LastLoginDate != null ? ViewBag.LastLoginDate.ToString("dd.MM.yyyy HH:mm") : "Bilgi yok")
                    </div>
                    <a href="@Url.Action("Profile", "Admin")" class="btn btn-primary">
                        <i class="fas fa-edit me-1"></i> Profili Düzenle
                    </a>
                </div>
            </div>
        </div>
    </div>
</div>

<script>
document.addEventListener('DOMContentLoaded', function() {
    // Silme butonları için onay dialogu
    const deleteButtons = document.querySelectorAll('.delete-blog-btn');
    
    deleteButtons.forEach(button => {
        button.addEventListener('click', function(e) {
            e.preventDefault();
            
            const blogId = this.getAttribute('data-blog-id');
            const blogTitle = this.getAttribute('data-blog-title');
            const deleteUrl = this.getAttribute('href');
            
            if (confirm(`"${blogTitle}" başlıklı blog yazısını silmek istediğinize emin misiniz?\n\nID: ${blogId}\n\nBu işlem geri alınamaz!`)) {
                window.location.href = deleteUrl;
            }
        });
    });
    
    // Debug için
    console.log('🛠️ Admin Dashboard Blog Tablosu hazır');
    console.log(`📊 Toplam ${deleteButtons.length} adet silme butonu bulundu`);
});
</script>